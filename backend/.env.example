# GitHub personal access token with repo and read:org scopes
GITHUB_TOKEN=your_github_token_here

# OpenAI API key for GPT-4o summarization
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key (optional â€” for Claude-based summarization)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub webhook secret (set this in your GitHub repo webhook settings)
WEBHOOK_SECRET=your_webhook_secret_here

# Path to the SQLite database file (defaults to pr_summarizer.db)
DB_PATH=pr_summarizer.db

# LLM model name to use (defaults to gpt-4o if not set)
LLM_MODEL=gpt-4o
